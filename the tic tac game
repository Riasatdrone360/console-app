/*Tic tac toe game*/
#include<stdio.h>
#include<conio.h>
char matrix[3][3];
char check();
void init_matrix();
void get_player_move();
void get_computer_move();
void disp_matrix();
int main()
{
char done;
printf("this is the game of tic tac toe.\n");
printf("you will play with computer\n");
done=' ';
init_matrix();
do{
disp_matrix();
get_player_move();
done=check();//se if winner//
}while(done==' ');
if (done=='X') printf("you won!\n");
else printf("i won!!!\n");
disp_matrix();//show final position //
return 0;
}
//initialize matrix//
void init_matrix()
{
int i,j;
for(i=0;i<3;i++)
for(j=0;j<3;j++)
matrix[i][j]=' ';
}
//get players move//
void get_player_move()
{
int x,y;
printf("enter X,Y coordinate for your move:");
scanf(""%d %*c %d",&x,&y);       //hi baby//
x--;
y--;
if(matrix[x][y]!=' ')
{
printf("invalid move, try again\n");
get_player_move();
}
else mattrix[x][y]='X';
}
//get move from computer//
void get_computer_move()
{
int i,j;
for(i=0;i<3;i++)
{for(j=0;j<3;j++)
if(matrix[i][j]==' ') break;
if(matrix[i][j]==' ') break;
}
if(i*j==9)
{
printf("draw\n");
exit(0);
}
else
matrix[i][j]='0';
}
//display the matrix on screen.//
void disp_matrix()
{
int t;
for(t=0;t<3;t++)
{
printf("%c | %c | %c",matrix[t][0],matrix[t][0],matrix[t][2]);
if(t!=2)
printf("\n---|---|---\n");
}
printf("\n");
}
// see if there is a winner.//
char check()
{
for(i=0;i<3;i++)          //checks rows//
if(matrix[i][0]==matrix[i][1]&& matrix[i][0]==matrix[i][2]) return matrix[i][0];
for(i=0;i<3;i++)         ///checks columns//
if(matrix[0][i]==matrix[1][i]&&matrix[0][i]==matrix[2][i]) return matrix[0][i];
//test diagonals//
if(matrix[0][0]==matrix[1][1]&&matrix[1][1]==matrix[2][2])
return matrix[0][0];
if(matrix[0][2]==matrix[1][1]&&matrix[1][1]==matrix[2][0])
return matrix[0][2];
return ' ';
}
