#include<stdio.h>
#include <stdlib.h>
#include<string.h>
typedef struct {
	char source[15];
	char destination[15];
	char flightNo[5];
	char date[12];
	char time[6];
	int fare;
}flight;
struct flight f1={"NEW DELHI","KOLKATA","AJ56LK","12-10-2018","12:30",6899}
/*strcpy(f1.source,"NEW DELHI");
f1.destination="KOLKATA";
f1.flightNo="AJ56LK";
f1.date="12-10-2018";
f1.time="12:30";
 f1.fare=6899;*/
typedef struct
{
	int seatno;
	char booking_ID[10];
}seatinfo;
seatinfo seats;
int n=0,l=0;//n for locating the searched flight & l for locating booking id
char sterminal[15];
char dterminal[15];
char dte[12];
void display();
void allotflight();
void calcfare();
void allotseat();
void input();
void seatavailable();
int booking_ID=100;
int seatsavailable=20;
int nofseat;
int totcost;
int main()
{
	printf("WELCOME TO AIR TICKET BOOKING!!!\n");
    input();
}
void input()
{
printf("enter your source station\n");
scanf("%s",&sterminal);
printf("enter destination station\n");
scanf("%s",&dterminal);
printf("enter the journey date(DD-MM-YYYY)\n");
scanf("%s",&dte);
}
void allotflight()
{
	int j=0;
	for(int i=0;!strcmp(sterminal,f1.source)||!strcmp(dterminal,f1.destination)||!strcmp(dte,f1.date)||i<10;i++)
      {j++;
	  n=i;}
	  if(j!=0)
   calcfare();
      else
      printf("no such flight found");
}
void calcfare()
{char ch;
	printf("Enter number of seats you want to book\n");
scanf("%d",&nofseat);
if(nofseat<seatsavailable)
totcost=nofseat*f1.fare;
else
printf("sorry for inconvinience, but we have only %d seat left",seatsavailable);
printf("wanna try again(y/n)");
scanf("%c",&ch);
if(ch=='y'||ch=='Y')
calcfare();
allotseat();
}
void allotseat()
{
	sscanf(seats.booking_ID,"A%dXP%d3IT",&l,&l);
	seats.seatno=l;
	l++;
}
void display()
{
	printf("source station:%s",f1.source);
	printf("destination station:%s",f1.destination);
   printf("flight number :%s",f1.flightNo);
   printf("Date of flight journey :%s",f1.date);
   printf("time of the flight is %s",f1.time);
   printf("number of seats :%d",nofseat);
   printf("starting seat number=%d",seats.seatno);
    printf("booking id : %s",seats.booking_ID);
}
